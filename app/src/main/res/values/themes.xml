<resources>
    <!-- Base application theme. -->
    <style name="Theme.TryPhotoView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Image" parent="Theme.TryPhotoView">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:colorControlHighlight">@color/image_ripple</item>
        <!-- ステータスバーの色を設定する -->
        <item name="android:statusBarColor">@color/image_status_bar_color</item>
        <!-- ナビゲーションバーの色を設定する -->
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <!-- ダークテーマでも見れるようにする -->
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>
